{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "traceResolution": true,
        "diagnostics": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "src",
        "__tests__"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeAcquisition": {
        "include": [
            "jest",
            "@types/jest",
            "ts-jest"
        ]
    }
}